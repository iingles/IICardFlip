<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IICardFlip.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image x:Name="ImgCardFace"
               Source="Ace_Spades.jpg"
               Margin="20"
               IsVisible="false"
               />
        <Image x:Name="ImgCardBack"
               Source="Backface_Blue.jpg"
               Margin="20"
               />
        <Button x:Name="BtnFlip" 
                Text="Show Card Face"
                Grid.Row="1"
                VerticalOptions="Center"
                FontSize="30"
                Clicked="BtnFlip_Clicked"
                />
    </Grid>

</ContentPage>
